<p>Sign up</p>


<div class="row">
  <div class="col-10 col-md-offset-3 float-left">

      <%= form_for(@user, url: signup_path) do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :名前 %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :メール %>
      <%= f.email_field :email, class: "form-control" %>


      <%= f.label :パスワード %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :確認用のパスワード, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.label :プログ画像をアップ %>
      <%= f.file_field :picture %>


      <%= f.submit "Create my account", class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
</div>

<h2>Log in方法</h2>
   <div class="text-center">
 <%= link_to 'ゲストログイン', guest_login_path, method: :post, class: "nav-link", data: {turbolinks: false}, class: "btn btn-outline-success"  %>
 <%= link_to "Log in", login_path, class: "nav-link", data: {turbolinks: false},  class: "btn btn-outline-primary" %>
</div>
