<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.picture.url unless @user.picture.blank? %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user, data: {turbolinks: false} %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>

      <% if @users.any? %>
      <div class="user_avatars">
        <% @users.each do |user| %>
        <%= link_to image_tag(user.picture.url), user_show_path(user_id: user.id), size: 200, data: {turbolinks: false} unless user.picture.blank? %>
        <% end %>
      </div>
      <% end %>
    </section>
  </aside>


  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
    <ul class="users follow">
      <% #= render @users %>
    </ul>
    <% end %>
  </div>
</div>