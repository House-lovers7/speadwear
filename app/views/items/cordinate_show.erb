       <% elsif  @item.super_item == "shoes" %>
          <%= link_to "コーデにシューズとして登録",  items_patch_path(item_id: @item.id, id: params[:cordinate_id], cordinate_si_shoes: @item.id),data: {turbolinks: false} ,  method: :patch  %>
       <% end %>

</div>
