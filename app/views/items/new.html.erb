<h1 class="text-2xl font-bold mb-4">新規アイテム作成</h1>

<turbo-frame id="main">
  <%= form_with model: @item, local: false, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :name, class: "block text-gray-700" %>
      <%= f.text_field :name, class: "w-full p-2 border rounded" %>
    </div>
    <div>
      <%= f.submit "作成", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</turbo-frame>