<header class="bg-white shadow">
  <nav class="container mx-auto px-4 py-2 flex items-center justify-between">
    <div class="text-xl font-semibold">
      <%= link_to 'スピウェア', root_path, class: 'text-gray-800 hover:text-gray-600' %>
    </div>
    <div class="hidden md:flex space-x-4">
      <%= link_to 'Home', root_path, class: 'text-gray-800 hover:text-gray-600' %>
      <%= link_to 'About', about_path, class: 'text-gray-800 hover:text-gray-600' %>
      <%= link_to 'Contact', contact_path, class: 'text-gray-800 hover:text-gray-600' %>
    </div>
    <div class="md:hidden">
      <button id="mobile-menu-button" class="text-gray-800 focus:outline-none">
        <svg class="h-6 w-6 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>
  <div id="mobile-menu" class="hidden md:hidden bg-white shadow">
    <div class="px-4 pt-2 pb-4 space-y-2">
      <%= link_to 'Home', root_path, class: 'block text-gray-800 hover:text-gray-600' %>
      <%= link_to 'About', about_path, class: 'block text-gray-800 hover:text-gray-600' %>
      <%= link_to 'Contact', contact_path, class: 'block text-gray-800 hover:text-gray-600' %>
    </div>
  </div>
  <script>
    document.getElementById('mobile-menu-button').addEventListener('click', function() {
      var menu = document.getElementById('mobile-menu');
      menu.classList.toggle('hidden');
    });
  </script>
</header> 